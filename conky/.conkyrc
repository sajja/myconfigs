background no
font Sans:size=10
#xftfont Sans:size=10
use_xft yes
xftalpha 0.9
update_interval 3.0
total_run_times 0
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
text_buffer_size 2048
minimum_size 220 5
maximum_width 1000
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
default_outline_color green
alignment top_left
gap_x 12
gap_y 35
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
uppercase no # set to yes if you want all text to be in uppercase



TEXT
${font Sans:size=12}${color FF9933}SYSTEM ${hr 1}${color}${font}

Kernel: $alignr$kernel
Uptime: $alignr$uptime

${color 99FF99}CPU1 ${color} ${alignr}${cpu cpu1}%
${color CCCCFF}${cpubar cpu1} ${color}
${color 99FF99}CPU2 ${color} ${alignr}${cpu cpu2}%
${color CCCCFF}${cpubar cpu2} ${color}
${color 99FF99}CPU3${color} ${alignr}${cpu cpu3}%
${color CCCCFF}${cpubar cpu3} ${color}
${color 99FF99}CPU4${color}${alignr}${cpu cpu4}%
${color CCCCFF}${cpubar cpu4}${color}

${color 66FFFF}Ram ${alignr}$mem / $memmax ($memperc%)${color}
${color CCCCFF}${membar 4}${color}
${color 66FFFF}Swap ${alignr}$swap / $swapmax ($swapperc%)${color}
${color CCCCFF}${swapbar 4}${color}

${color 99FF99}Highest CPU $alignr CPU% MEM%${color}
${top name 1}$alignr${top cpu 1}${top mem 1}
${top name 2}$alignr${top cpu 2}${top mem 2}
${top name 3}$alignr${top cpu 3}${top mem 3}

${color 99FF99}Highest MEM $alignr CPU% MEM%${color}
${top_mem name 1}$alignr${top_mem cpu 1}${top_mem mem 1}
${top_mem name 2}$alignr${top_mem cpu 2}${top_mem mem 2}
${top_mem name 3}$alignr${top_mem cpu 3}${top_mem mem 3}

${font Sans:size=12}${color  FF9933}Filesystem ${hr 1}${color}${font}
Root: ${alignr}${fs_free /} / ${fs_size /}
Home: ${alignr}${fs_free /home}/${fs_size /home}

