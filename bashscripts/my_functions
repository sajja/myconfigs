function jt() {
    cd $JBOSS4_HOME/bin
    export JAVA_OPTS="-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=8787"
    echo "******** SETTING DEBUG INFO TO JAVA_OPTS *************"
    echo $JAVA_OPTS

    ./run.sh -c st -DrunSingletonScheduler=true
}


